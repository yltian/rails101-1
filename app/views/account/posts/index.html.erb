<div class="col-md-12">
  <h2 class="text-center">My Posts</h2>

  <table class="table">
    <thead>
      <tr>
        <td> > </td>
        <td> Content </td>
        <td> Group Name</td>
        <td> Last Update</td>
        <td colspan="2"> </td>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> > </td>
          <td><%= post.content %></td>
          <td><%= link_to post.group.title, group_path(post.group) %></td>
          <td><%= post.updated_at %></td>
          <td><%= link_to "Edit", edit_group_post_path(post.group, post), class: "btn btn-default btn-xs" %></td>
          <td><%= link_to "Delete", group_post_path(post.group, post), method: :delete, data: { confirm: "Are you sure?"} ,class: "btn btn-default btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
